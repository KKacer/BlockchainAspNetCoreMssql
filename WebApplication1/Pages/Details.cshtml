@page
@model WebApplication1.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CarEntry.Notes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CarEntry.Notes)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CarEntry.CreateDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CarEntry.CreateDate)
        </dd>
    </dl>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CarEntry.CarSalesEntries.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarEntry.CarSalesEntries.First().CarNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarEntry.CarSalesEntries.First().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarEntry.CarSalesEntries.First().TransactionDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarEntry.CarSalesEntries.First().IsValid)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarEntry.CarSalesEntries)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionDate)
                        </td>
                        <td>
                            @item.IsValid
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>
            <a asp-page="./CreateCarSalesEntry" asp-route-carid="@Model.CarEntry.Id">Create New Car Sales Entry</a>
        </p>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
